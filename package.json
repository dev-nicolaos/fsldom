{
  "name": "fsldom",
  "version": "2.0.0",
  "description": "A fast, simple and lightweight library for manipulating the DOM",
  "keywords": [
    "front-end",
    "dom",
    "ui",
    "javascript",
    "html",
    "web"
  ],
  "homepage": "https://github.com/dev-nicolaos/fsldom#readme",
  "bugs": "https://github.com/dev-nicolaos/fsldom/issues",
  "license": "MIT",
  "author": "Nicolaos Skimas (https://nicolaosskimas.com)",
  "type": "module",
  "main": "src/fsldom.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-nicolaos/fsldom.git"
  },
  "scripts": {
    "format": "prettier --write src/**/*.js",
    "dev": "onchange \"src/**/*\" -- prettier --write {{changed}}",
    "rollup": "rollup -c",
    "build": "npm run format && npm run rollup"
  },
  "devDependencies": {
    "onchange": "^5.2.0",
    "prettier": "1.16.4",
    "rollup": "^1.9.0",
    "rollup-plugin-terser": "^4.0.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
